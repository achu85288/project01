        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\""
    },
    "dependencies": {
        "axios": "^1.9.0",
        "bcrypt": "^5.1.1",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "crypto": "^1.0.1",
        "dotenv": "^16.5.0",
        "express": "^4.21.2",
        "express-session": "^1.18.1",
        "jsonwebtoken": "^9.0.2",
        "module-alias": "^2.2.3",
        "mongoose": "^8.14.1",
        "morgan": "^1.10.0",
        "nodemailer": "^6.10.1",
        "zod": "^3.24.4"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/bcryptjs": "^2.4.6",
        "@types/cookie-parser": "^1.4.8",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-session": "^1.18.1",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/mongoose": "^5.11.97",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.17.44",
        "@types/nodemailer": "^6.4.17",
        "@typescript-eslint/eslint-plugin": "^8.32.0",
        "@typescript-eslint/parser": "^8.32.0",
        "add": "^2.0.6",
        "concurrently": "^8.2.2",
        "eslint": "^9.26.0",
        "eslint-config-prettier": "^10.1.3",
        "eslint-plugin-prettier": "^5.4.0",
        "nodemon": "^3.1.10",
        "pnpm": "^10.10.0",
        "prettier": "^3.5.3",
        "ts-alias": "^0.0.7",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "ttypescript": "^1.5.15",
        "typescript": "^5.8.3"
    },
    "_moduleAliases": {
        "@": "dist",
