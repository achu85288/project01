{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
      "rootDir": "src",
      "outDir": "dist",
      "target": "ES2022",
      "module": "Node16",
      "moduleResolution": "Node16",
      "esModuleInterop": true,
      "types": ["node"],
      "baseUrl": "./",
      "paths": {
        "@/*": ["./src/*"], 
      }
    },
    "include": ["src/*"],
    "exclude": ["node_modules"]
  }